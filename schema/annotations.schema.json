{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/garment-pattern-uv-dataset/annotations.schema.json",
  "title": "Garment Pattern UV Dataset Annotation",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "garment_id": {
      "type": "string"
    },
    "garment_type": {
      "type": "string"
    },
    "design_reasoning": {
      "type": "string"
    },
    "parts": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/part"
      }
    }
  },
  "$defs": {
    "part": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string"
        },
        "label": {
          "type": "string"
        },
        "modeling_reasoning": {
          "type": "string"
        },
        "uv_reasoning": {
          "type": "string"
        },
        "seams": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/seam"
          }
        }
      }
    },
    "seam": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string"
        },
        "seam_reasoning": {
          "type": "string"
        }
      }
    }
  }
}
